<h2 class="mb-5">Alteração de nota de texto</h2>
<form method="POST" action="/nota/altera/{{chave}}">
    <div class="mb-3">
        <label class="form-label" for="chave">Chave</label>
        <input class="form-control" type="text" name="chave" value="{{chave}}" size="30" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label" for="titulo">Título</label>
        <input class="form-control" type="text" name="titulo" id="titulo" value="{{titulo}}" size="60" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="importancia">Importâcia da Nota</label>
        <input class="form-control" type="number" name="importancia" id="importancia" value="{{importancia}}" size="1" max="5" min="1"/>
    </div>
    <div class="mb-3">
        <label class="form-label" for="texto">Texto da Nota</label>
        <textarea class="form-control" rows="5" cols="57" name="texto" id="texto">{{texto}}</textarea>
    </div>
    <div class="mb-4">
        {{#if lida}}
            <input class="form-check-input" type="checkbox" name="status" id="status" checked />
        {{else}}
            <input class="form-check-input" type="checkbox" name="status" id="status" />
        {{/if}}
        <label class="form-check-label" for="status">Nota Lida</label>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Alterar</button>
        <a href="/" class="btn btn-secondary" role="submit">Cancelar</a>
    </div>









</form>